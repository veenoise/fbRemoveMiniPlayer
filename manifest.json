{
  "manifest_version": 3,
  "name": "Facebook Remove Miniplayer",
  "version": "1.0",
  "description": "Remove the annoying autoplaying miniplayer when scrolling Facebook videos",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }, 
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.facebook.com/"
      ]
    }
  ]
}